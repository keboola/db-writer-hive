{
    "name": "keboola/db-writer-hive",
    "license": "MIT",
    "type": "project",
    "description": "Keboola Writer to Apache Hive DB",
    "keywords": ["keboola", "hive", "writer"],
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-odbc": "*",
        "ext-pdo": "*",
        "dibi/dibi": "^4.1",
        "keboola/db-writer-common": "^5.4",
        "keboola/php-component": "^7.0.1"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "keboola/coding-standard": ">=7.0.2",
        "keboola/php-temp": "^1.0",
        "phpstan/phpstan": "^0.12.11",
        "phpunit/phpunit": "^7.0",
        "symfony/process": "^4.0",
        "keboola/datadir-tests": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\DbWriter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbWriter\\Tests\\": "tests/phpunit/",
            "Keboola\\DbWriter\\FunctionalTests\\": "tests/functional/"
        }
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests-datadir": "phpunit tests/functional",
        "tests": [
            "@tests-phpunit",
            "@tests-datadir"
        ],

        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
